<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_shade_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditLaptopActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Edit Laptop Detail"
                android:padding="4.5dp"
                android:textAlignment="center"
                android:textColor="@color/peek_white"
                android:textColorHint="@color/peek_white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/idEditLaptopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Laptop Name"
                android:padding="4.5dp"
                android:textColor="@color/peek_white"
                android:textColorHint="@color/peek_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/idEditLaptopBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Laptop Brand"
                android:padding="4.5dp"
                android:textColor="@color/peek_white"
                android:textColorHint="@color/peek_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/idEditLaptopRAM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Laptop RAM Size"
                android:padding="4.5dp"
                android:textColor="@color/peek_white"
                android:textColorHint="@color/peek_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/idEditLaptopProcessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Laptop Processor"
                android:padding="4.5dp"
                android:textColor="@color/peek_white"
                android:textColorHint="@color/peek_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/idEditLaptopCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Laptop Cost"
                android:padding="4.5dp"
                android:textColor="@color/peek_white"
                android:textColorHint="@color/peek_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/idEditLaptopImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:hint="Enter Laptop Image URL"
                android:padding="4.5dp"
                android:textColor="@color/peek_white"
                android:textColorHint="@color/peek_white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idUpdateLaptopButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingHorizontal="30dp"
                    android:text="Update Laptop" />
<!--                    android:onClick="loadHomePage"-->


                <Button
                    android:id="@+id/idDeleteLaptopButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingHorizontal="30dp"
                    android:text="Delete Laptop" />
<!--                    android:onClick="loadHomePage"-->

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>